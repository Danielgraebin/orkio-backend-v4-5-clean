# ============================================================================
# ORKIO v4.5 Backend - Environment Variables
# ============================================================================

# DATABASE
# Format: postgresql+psycopg://postgres.<id>:<password>@db.<project>.supabase.co:6543/postgres
DATABASE_URL=postgresql+psycopg://postgres.USER:PASSWORD@db.PROJECT.supabase.co:6543/postgres

# JWT & SECURITY
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API BASE URL (for frontend integration)
API_BASE_URL=https://your-render-backend-url.onrender.com

# CORS ORIGINS
CORS_ORIGINS=["http://localhost:3000","https://your-vercel-frontend.vercel.app"]

# LLM CONFIGURATION (Fallback only - Primary keys stored per tenant in DB)
OPENAI_API_KEY=sk-your-fallback-key-here
OPENAI_MODEL_DEFAULT=gpt-4.1-mini
ALLOWED_MODELS=["gpt-4.1-mini","gpt-4.1-nano","gemini-2.5-flash"]

# ANTHROPIC (Fallback - Optional)
ANTHROPIC_API_KEY=sk-ant-your-fallback-key-here

# GOOGLE (Fallback - Optional)
GOOGLE_API_KEY=your-google-api-key-here

# GROQ (Fallback - Optional)
GROQ_API_KEY=gsk-your-groq-key-here

# STORAGE (S3 / Supabase Storage)
STORAGE_TYPE=supabase
SUPABASE_URL=https://PROJECT.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# LOGGING
LOG_LEVEL=INFO
DEBUG=false

# ENVIRONMENT
ENVIRONMENT=production
